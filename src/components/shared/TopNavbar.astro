<nav class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-20">
      <!-- Logo -->
      <a href="/">
        <img src="/assets/images/logo.png" alt="NTK Logo" class="h-28 w-auto" />
      </a>

      <!-- Desktop Nav -->
      <div class="hidden md:flex space-x-8 font-medium text-gray-700">
        <a href="/" class="hover:text-blue-600 transition">Home</a>
        <a href="/Events" class="hover:text-blue-600 transition">Events</a>
        <a href="/Stories" class="hover:text-blue-600 transition">Stories</a>
        <a href="/About" class="hover:text-blue-600 transition">About</a>
      
      </div>

      <!-- Mobile Hamburger -->
      <div class="md:hidden">
        <button id="menu-toggle" class="text-gray-700 focus:outline-none">
          <svg id="menu-open" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
          <svg id="menu-close" xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden hidden px-6 pb-4">
    <a href="/" class="block py-2 text-gray-700 hover:text-blue-600">Home</a>
    <a href="#events" class="block py-2 text-gray-700 hover:text-blue-600">Events</a>
    <a href="#about" class="block py-2 text-gray-700 hover:text-blue-600">About</a>
    <a href="#stories" class="block py-2 text-gray-700 hover:text-blue-600">Stories</a>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toggle = document.getElementById("menu-toggle");
    const menu = document.getElementById("mobile-menu");
    const openIcon = document.getElementById("menu-open");
    const closeIcon = document.getElementById("menu-close");

    toggle.addEventListener("click", () => {
      menu.classList.toggle("hidden");
      openIcon.classList.toggle("hidden");
      closeIcon.classList.toggle("hidden");
    });
  });
</script>
