---
import { 
  Target, 
  Eye, 
  Users, 
  BookOpen, 
  Code2, 
  Share2,
  Heart,
  Lightbulb,
  GraduationCap,
  Crown,
  Diversity3,
  TrendingUp,
  Calendar,
  Award,
  ArrowRight,
  Sparkles
} from 'lucide-react';
---

<section class="about-section">
  <div class="container">
    
    <!-- Section Header -->
    <div class="section-header">
      <div class="header-decoration">
        <Sparkles class="sparkle-icon" />
        <Sparkles class="sparkle-icon" />
        <Sparkles class="sparkle-icon" />
      </div>
      <h2 class="main-title">About Nepal Tek Community</h2>
      <div class="title-underline"></div>
    </div>

    <!-- Intro Paragraph -->
    <p class="intro-text">
      Nepal Tek Community (NTK) is a <span class="highlight">student-led initiative</span> founded at NCIT with the mission to create
      a vibrant and inclusive tech ecosystem. We bring together aspiring developers, designers, thinkers,
      and tech enthusiasts to <span class="highlight">connect, learn, collaborate, and grow together.</span>
    </p>

    <!-- Mission & Vision -->
    <div class="mission-vision-grid">
      <div class="mission-card">
        <div class="card-icon mission-icon">
          <Target />
        </div>
        <h3 class="card-title">Our Mission</h3>
        <p class="card-content">
          To empower students with skills, mentorship, and opportunities in the tech world while fostering
          a culture of creativity, collaboration, and leadership.
        </p>
        <div class="card-glow mission-glow"></div>
      </div>
      
      <div class="vision-card">
        <div class="card-icon vision-icon">
          <Eye />
        </div>
        <h3 class="card-title">Our Vision</h3>
        <p class="card-content">
          To become the most influential student tech community in Nepal, creating changemakers who impact
          industries, communities, and the nation.
        </p>
        <div class="card-glow vision-glow"></div>
      </div>
    </div>

    <!-- What We Do -->
    <div class="what-we-do-section">
      <h3 class="section-title">What We Do</h3>
      <div class="activities-grid">
        <div class="activity-card connect">
          <div class="activity-icon">
            <Users />
          </div>
          <h4 class="activity-title">Connect</h4>
          <p class="activity-description">Networking through meetups & tech events</p>
          <div class="activity-decoration"></div>
        </div>
        
        <div class="activity-card learn">
          <div class="activity-icon">
            <BookOpen />
          </div>
          <h4 class="activity-title">Learn</h4>
          <p class="activity-description">Workshops, bootcamps, and knowledge-sharing</p>
          <div class="activity-decoration"></div>
        </div>
        
        <div class="activity-card collaborate">
          <div class="activity-icon">
            <Code2 />
          </div>
          <h4 class="activity-title">Collaborate</h4>
          <p class="activity-description">Hackathons, open-source projects, team efforts</p>
          <div class="activity-decoration"></div>
        </div>
        
        <div class="activity-card share">
          <div class="activity-icon">
            <Share2 />
          </div>
          <h4 class="activity-title">Share</h4>
          <p class="activity-description">Blogs, podcasts, public speaking, mentorship</p>
          <div class="activity-decoration"></div>
        </div>
      </div>
    </div>

    <!-- Core Values -->
    <div class="values-section">
      <h3 class="section-title">Our Core Values</h3>
      <div class="values-grid">
        <div class="value-item">
          <GraduationCap class="value-icon" />
          <span>Student Empowerment</span>
        </div>
        <div class="value-item">
          <Lightbulb class="value-icon" />
          <span>Open Innovation & Collaboration</span>
        </div>
        <div class="value-item">
          <Crown class="value-icon" />
          <span>Leadership & Responsibility</span>
        </div>
        <div class="value-item">
          <Heart class="value-icon" />
          <span>Diversity & Inclusion</span>
        </div>
      </div>
    </div>

    <!-- Achievements -->
    <div class="achievements-section">
      <h3 class="section-title">Our Journey & Impact</h3>
      <div class="stats-grid">
        <div class="stat-card">
          <div class="stat-icon-wrapper">
            <Users class="stat-icon" />
          </div>
          <div class="stat-number">500+</div>
          <div class="stat-label">Students Engaged</div>
          <div class="stat-description">Across NCIT & nationwide</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon-wrapper">
            <Calendar class="stat-icon" />
          </div>
          <div class="stat-number">10+</div>
          <div class="stat-label">Events Organized</div>
          <div class="stat-description">Hackathons, bootcamps, webinars & more</div>
        </div>
        
        <div class="stat-card">
          <div class="stat-icon-wrapper">
            <Award class="stat-icon" />
          </div>
          <div class="stat-number">Growing</div>
          <div class="stat-label">Alumni Network</div>
          <div class="stat-description">Working in top tech firms & startups</div>
        </div>
      </div>
    </div>

    <!-- Call to Action -->
    <div class="cta-section">
      <div class="cta-content">
        <h3 class="cta-title">Ready to Shape the Future?</h3>
        <p class="cta-subtitle">Join Nepal's most dynamic tech community and be part of the change</p>
        <a href="/apply" class="cta-button">
          <span>Join NTK â€“ Apply Now</span>
          <ArrowRight class="cta-arrow" />
        </a>
      </div>
      <div class="cta-background">
        <div class="cta-circle"></div>
        <div class="cta-circle"></div>
        <div class="cta-circle"></div>
      </div>
    </div>

  </div>
</section>

<style>
  .about-section {
    padding: 5rem 1.5rem;
    background: #ffffff;
    color: #1f2937;
    position: relative;
    overflow: hidden;
  }

  .about-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("data:image/svg+xml,%3Csvg width='60' height='60' viewBox='0 0 60 60' xmlns='http://www.w3.org/2000/svg'%3E%3Cg fill='none' fill-rule='evenodd'%3E%3Cg fill='%23e5e7eb' fill-opacity='0.4'%3E%3Ccircle cx='30' cy='30' r='2'/%3E%3C/g%3E%3C/g%3E%3C/svg%3E") repeat;
    pointer-events: none;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: 3rem;
    position: relative;
  }

  .header-decoration {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .sparkle-icon {
    width: 24px;
    height: 24px;
    color: #f59e0b;
    animation: sparkle 2s ease-in-out infinite;
  }

  .sparkle-icon:nth-child(2) {
    animation-delay: 0.5s;
  }

  .sparkle-icon:nth-child(3) {
    animation-delay: 1s;
  }

  @keyframes sparkle {
    0%, 100% { transform: scale(1) rotate(0deg); opacity: 0.8; }
    50% { transform: scale(1.2) rotate(180deg); opacity: 1; }
  }

  .main-title {
    font-size: 3.5rem;
    font-weight: 800;
    margin: 0;
    background: linear-gradient(45deg, #1f2937, #374151);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1.1;
  }

  .title-underline {
    width: 100px;
    height: 4px;
    background: linear-gradient(90deg, #3b82f6, #8b5cf6);
    margin: 1rem auto;
    border-radius: 2px;
  }

  .intro-text {
    font-size: 1.25rem;
    line-height: 1.7;
    margin: 0 auto 4rem;
    max-width: 800px;
    text-align: center;
    color: #4b5563;
  }

  .highlight {
    background: linear-gradient(45deg, #3b82f6, #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 600;
  }

  .mission-vision-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 5rem;
  }

  .mission-card, .vision-card {
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 20px;
    padding: 2.5rem;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .mission-card:hover, .vision-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: #d1d5db;
  }

  .card-icon {
    width: 60px;
    height: 60px;
    border-radius: 15px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 1.5rem;
    transition: transform 0.3s ease;
  }

  .mission-icon {
    background: linear-gradient(45deg, #3b82f6, #1d4ed8);
    color: white;
  }

  .vision-icon {
    background: linear-gradient(45deg, #8b5cf6, #7c3aed);
    color: white;
  }

  .mission-card:hover .card-icon, .vision-card:hover .card-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .card-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: #1f2937;
  }

  .card-content {
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
    color: #4b5563;
  }

  .card-glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    opacity: 0;
    transition: opacity 0.3s ease;
    pointer-events: none;
  }

  .mission-glow {
    background: radial-gradient(circle, rgba(59, 130, 246, 0.1) 0%, transparent 70%);
  }

  .vision-glow {
    background: radial-gradient(circle, rgba(139, 92, 246, 0.1) 0%, transparent 70%);
  }

  .mission-card:hover .mission-glow, .vision-card:hover .vision-glow {
    opacity: 1;
  }

  .what-we-do-section {
    margin-bottom: 5rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    text-align: center;
    margin: 0 0 3rem 0;
    color: #1f2937;
  }

  .activities-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .activity-card {
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 15px;
    padding: 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  .activity-card:hover {
    transform: translateY(-5px) scale(1.02);
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    border-color: #d1d5db;
  }

  .activity-icon {
    width: 50px;
    height: 50px;
    margin: 0 auto 1rem;
    padding: 12px;
    border-radius: 12px;
    transition: all 0.3s ease;
    color: white;
  }

  .connect .activity-icon {
    background: linear-gradient(45deg, #06b6d4, #0891b2);
  }

  .learn .activity-icon {
    background: linear-gradient(45deg, #10b981, #059669);
  }

  .collaborate .activity-icon {
    background: linear-gradient(45deg, #f97316, #ea580c);
  }

  .share .activity-icon {
    background: linear-gradient(45deg, #8b5cf6, #7c3aed);
  }

  .activity-card:hover .activity-icon {
    transform: scale(1.1) rotate(10deg);
  }

  .activity-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: 0 0 0.5rem 0;
    color: #1f2937;
  }

  .activity-description {
    font-size: 0.9rem;
    color: #6b7280;
    margin: 0;
  }

  .activity-decoration {
    position: absolute;
    top: 0;
    right: 0;
    width: 40px;
    height: 40px;
    background: rgba(59, 130, 246, 0.1);
    border-radius: 0 15px 0 40px;
  }

  .values-section {
    margin-bottom: 5rem;
  }

  .values-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .value-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    background: #ffffff;
    padding: 1.5rem;
    border-radius: 12px;
    border: 2px solid #e5e7eb;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06);
  }

  .value-item:hover {
    background: #f9fafb;
    transform: translateX(5px);
    border-color: #d1d5db;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .value-icon {
    width: 24px;
    height: 24px;
    color: #3b82f6;
    flex-shrink: 0;
  }

  .achievements-section {
    margin-bottom: 5rem;
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .stat-card {
    background: #ffffff;
    border: 2px solid #e5e7eb;
    border-radius: 20px;
    padding: 2.5rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
  }

  .stat-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    border-color: #d1d5db;
  }

  .stat-icon-wrapper {
    width: 70px;
    height: 70px;
    background: linear-gradient(45deg,#f97316,#ea580c);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    transition: transform 0.3s ease;
  }

  .stat-card:hover .stat-icon-wrapper {
    transform: scale(1.1);
  }

  .stat-icon {
    width: 32px;
    height: 32px;
    color: white;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    color: #1f2937;
    margin-bottom: 0.5rem;
  }

  .stat-label {
    font-size: 1.1rem;
    font-weight: 600;
    color: #3b82f6;
    margin-bottom: 0.5rem;
  }

  .stat-description {
    font-size: 0.9rem;
    color: #6b7280;
  }

  .cta-section {
    text-align: center;
    position: relative;
    background: linear-gradient(135deg,rgb(178, 190, 240) 0%,rgb(153, 191, 214) 100%);
    border-radius: 25px;
    padding: 4rem 2rem;
    overflow: hidden;
    color: white;
  }

  .cta-content {
    position: relative;
    z-index: 2;
  }

  .cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem 0;
    color: #ffffff;
  }

  .cta-subtitle {
    font-size: 1.1rem;
    opacity: 0.9;
    margin: 0 0 2rem 0;
  }

  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    background: linear-gradient(45deg, #3b82f6, #8b5cf6);
    color: white;
    text-decoration: none;
    padding: 1rem 2rem;
    border-radius: 50px;
    font-weight: 600;
    font-size: 1.1rem;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(59, 130, 246, 0.3);
  }

  .cta-button:hover {
    transform: translateY(-3px) scale(1.05);
    box-shadow: 0 15px 40px rgba(59, 130, 246, 0.4);
  }

  .cta-arrow {
    width: 20px;
    height: 20px;
    transition: transform 0.3s ease;
  }

  .cta-button:hover .cta-arrow {
    transform: translateX(5px);
  }

  .cta-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
    z-index: 1;
  }

  .cta-circle {
    position: absolute;
    border-radius: 50%;
    background: linear-gradient(45deg, rgba(255, 255, 255, 0.1), rgba(255, 255, 255, 0.05));
    animation: float 6s ease-in-out infinite;
  }

  .cta-circle:nth-child(1) {
    width: 200px;
    height: 200px;
    top: -100px;
    left: -100px;
    animation-delay: 0s;
  }

  .cta-circle:nth-child(2) {
    width: 150px;
    height: 150px;
    bottom: -75px;
    right: -75px;
    animation-delay: 2s;
  }

  .cta-circle:nth-child(3) {
    width: 100px;
    height: 100px;
    top: 50%;
    right: 20%;
    animation-delay: 4s;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
  }

  @media (max-width: 768px) {
    .about-section {
      padding: 3rem 1rem;
    }

    .main-title {
      font-size: 2.5rem;
    }

    .mission-vision-grid {
      grid-template-columns: 1fr;
    }

    .activities-grid {
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    }

    .values-grid {
      grid-template-columns: 1fr;
    }

    .stats-grid {
      grid-template-columns: 1fr;
    }

    .cta-title {
      font-size: 2rem;
    }

    .cta-section {
      padding: 3rem 1.5rem;
    }
  }
</style>